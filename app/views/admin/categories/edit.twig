{% extends 'admin/base' %}

{% block title %} Edit category {% endblock %}

{% block content %}
	<div span="12">
		<h1>Edit</h1>

		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			Editing category  {{ category.name }}
		</div>
		{{ form_open({'method': 'PATCH', 'class': 'form-horizontal', 'route': ['admin.categories.update', category.id] })|raw }}
		<input type="hidden" name="datasheet_id" value="{{ datasheet.id }}">

		<div class="control-group {% if errors.category_name is defined %} error {% endif %}">
			<label for="category_name" class="control-label">New name:</label>

			<div class="controls">
				<input type="text" name="name" id="category_name" value="{{ app.request.get( 'category_name') }}">
				{% if errors.category_name is defined %}
					<span class="help-inline">{{ errors.category_name }}</span>
				{% endif %}
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Save</button>
			<a href="{{ url_route('admin.categories.index', {datasheet_id:datasheet.id}) }}" class="btn">Cancel</a>
		</div>
		</form>
	</div>
{% endblock %}

