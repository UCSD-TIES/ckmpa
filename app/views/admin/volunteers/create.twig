{% extends 'admin/base' %}

{% block title %}Create Volunteer{% endblock %}

{% block content %}
  <div class="span12">
    <h1>Create New Volunteer</h1>
{{ session_get('is') }}
    <form class="form-horizontal" action="{{ url_route('admin.volunteers.store') }}" method="POST">
      <div class="form-group{% if errors.first_name is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="first_name">First Name</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="first_name" name="first_name"
                 value="{{ input_old('first_name') }}">
          {% if errors.first_name is defined %}
            <span class="help-inline">{{ errors.first_name }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-group{% if errors.last_name is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="last_name">Last Name</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="last_name" name="last_name" value="{{ input_old('last_name') }}">
          {% if errors.last_name is defined %}
            <span class="help-inline">{{ errors.last_name }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-group{% if errors.username is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="username">Login Name</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="username" name="username" value="{{ input_old('username') }}">
          {% if errors.username is defined %}
            <span class="help-inline">{{ errors.username }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-group{% if errors.email is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="email">Email</label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="email" name="email" value="{{ input_old('email') }}">
          {% if errors.email is defined %}
            <span class="help-inline">{{ errors.email }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-group{% if errors.new_password is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="password">Password:</label>

        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password">
          {% if errors.password is defined %}
            <span class="help-inline">{{ errors.first('password') }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-group{% if errors.new_password is defined %} error{% endif %}">
        <label class="col-sm-2 control-label" for="new_password_b">Renter Password:</label>

        <div class="col-sm-10">
          <input type="password" class="form-control" id="password_confirmation" name="password_confirmation">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label class="checkbox" for="is_admin">
              <input type="checkbox" id="is_admin" name="is_admin" value="1"> Is Administrator
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <a class="btn btn-warning" href="{{ url_route('admin.volunteers.index') }}">Cancel</a>
        </div>
      </div>
    </form>
  </div>
{% endblock %}