{% extends 'admin/base' %}

{% block title %} Edit field {% endblock %}

{% block content %} 
  <div span="12">
    <h1>Edit</h1>
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        Editing field named {{field.name}}
    </div>
    <form class="form-horizontal" 
          action="{{ url_route('admin.fields.edit', {datasheet_id:datasheet.id, category_id:category.id, field_id:field.id}) }}"
          method="POST">
      <div class="control-group {% if errors.field_name is defined %} error {% endif %}">
        <label for="field_name" class="control-label">New name:</label>
        <div class="controls">
          <input type="text" name="field_name" id="field_name" value="{{ app.request.get( 'field_name') }}" >
          {% if errors.field_name is defined %}
          <span class="help-inline">{{ errors.field_name }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="{{ url_route('admin.fields.index', {datasheet_id:datasheet.id, category_id:category.id}) }}" class="btn">Cancel</a>
      </div>
    </form>
  </div>
{% endblock %}

