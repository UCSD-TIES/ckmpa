{% extends 'admin/base' %}

{% block title %} Edit Location {% endblock %}

{% block content %}
	<div span="12">
		<h1>Edit</h1>

		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			Editing location  {{ location.name }}
		</div>
		{{ form_open({'method': 'PATCH', 'class': 'form-horizontal', 'route': ['admin.locations.update', location.id] })|raw }}
		<input type="hidden" name="datasheet_id" value="{{ location.datasheet.id }}">

		<div class="control-group {% if errors.location_name is defined %} error {% endif %}">
			<label for="name" class="control-label">New name:</label>

			<div class="controls">
				<input type="text" name="name" id="name" value="{{ app.request.get( 'location_name') }}">
				{% if errors.location_name is defined %}
					<span class="help-inline">{{ errors.location_name }}</span>
				{% endif %}
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Save</button>
			<a href="{{ url_route('admin.locations.index') }}" class="btn">Cancel</a>
		</div>
		</form>
	</div>
{% endblock %}

