{% extends 'admin/base' %}

{% block title %} Create new section {% endblock %}

{% block content %} 
  <div span="12">
    <h1>Add a new section</h1>

    <form class="form-horizontal" action="{{ url_route('admin.sections.store', {id:location.id}) }}" method="POST">
      <input type="hidden" name='location_id' value="{{ location.id }}">
      <div class="control-group {% if errors.section_name is defined %} error {% endif %}">
        <label for="section_name" class="control-label">Name</label>
        <div class="controls">
          <input type="text" name="name" id="section_name" value="{{ app.request.get( 'section_name' ) }}" >
          {% if errors.section_name is defined %}
          <span class="help-inline">{{ errors.section_name }}</span>
          {% endif %}
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Create section</button>
        <a href="{{ url_route('admin.locations.show', {id:location.id}) }}" class="btn">Cancel</a>
      </div>



    </form>



  </div>
{% endblock %}

